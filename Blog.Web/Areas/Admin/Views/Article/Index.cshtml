
@model List<ArticleDto>
<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Makale Yönetimi /</span> Makaleler
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">

        <div class="table-responsive text-nowrap m-5">

            <a class="btn btn-success mb-3" asp-controller="Article" asp-action="Add">
                Makale Ekle <i class="bx bx-plus"></i>
            </a>
            
                
            <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0"> @*ekledik*@
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>

               

                <tbody class="table-border-bottom-0">
                    @foreach(var article in Model) @*eklendi*@
                    {
                        <tr
                            name="@article.Id"> 
                            <th> @article.Title</th>
                            <th>@article.Category.Name</th>
                            <th>@article.CreatedDate.ToShortDateString()</th>
                            <th>@article.CreatedBy</th>
                            <th>@(article.IsDeleted ?"Aktif değil":"Aktif")</th>
                            <td>

                                <a class="btn btn-primary btn-sm" data-id="@article.Id" asp-controller="Article" asp-action="Update" asp-route-articleId="@article.Id"><i class="bx bxs-edit"></i></a> @*asproute değişkenatamamızısağlar.Articlecontroller da atadığımız değişkenle aynı isimde olur bu sayede direkt bağlantı kurmamızı sağlar.butonların imgeleri için kullandığımz class bxs-edit*@
                                <a class="btn btn-danger btn-sm" data-id="@article.Id" asp-controller="Article" asp-action="Delete" asp-route-articleId="@article.Id"><i class="bx bx-minus-circle"></i></a>

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->

</div>
@section Scripts{
    <script
        src = "~/js/Article.js" type="application/ecmascript"> /*articlejs dosyasını eklemiş olduk*/
    </script>
}